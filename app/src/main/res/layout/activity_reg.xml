<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fece2e"
    android:layout_gravity="center"


    tools:context=".RegActivity"
    >



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"

        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/faster_one"
            android:text="J  HUB"
            android:textColor="@color/black"
            android:textSize="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-black"
            android:text="Welcome  to  J HUB"

            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-light"
            android:text="Enter your details to continue"

            android:textColor="#000000"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />


        <EditText
            android:id="@+id/user_name"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:background="@drawable/et_back"
            android:backgroundTint="@color/white"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="User Name"
            android:inputType="text"
            android:paddingLeft="55dp"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/profile"
            app:layout_constraintBottom_toBottomOf="@+id/user_name"
            app:layout_constraintEnd_toEndOf="@+id/user_name"

            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toStartOf="@+id/user_name"
            app:layout_constraintTop_toTopOf="@+id/user_name"></ImageView>

        <EditText
            android:id="@+id/roll_no"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/et_back"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="Roll Number"
            android:inputType="text"
            android:paddingLeft="55dp"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_name"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/id"
            app:layout_constraintBottom_toBottomOf="@+id/roll_no"
            app:layout_constraintEnd_toEndOf="@+id/roll_no"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toStartOf="@+id/roll_no"
            app:layout_constraintTop_toTopOf="@+id/roll_no"></ImageView>




        <EditText
            android:id="@+id/phone"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/et_back"
            android:backgroundTint="@color/white"


            android:ems="10"
            android:hint="Phone Number"
            android:inputType="phone"
            android:paddingLeft="55dp"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roll_no"
            tools:ignore="TouchTargetSizeCheck" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91"
            android:textColor="#CC000000"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/phone"
            app:layout_constraintEnd_toEndOf="@+id/phone"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toStartOf="@+id/phone"
            app:layout_constraintTop_toTopOf="@+id/phone" />


        <ImageView
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:elevation="10dp"
            android:src="@drawable/next"

            app:layout_constraintBottom_toBottomOf="@+id/getOtpBtn"
            app:layout_constraintEnd_toEndOf="@+id/getOtpBtn"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintStart_toStartOf="@+id/getOtpBtn"
            app:layout_constraintTop_toTopOf="@+id/getOtpBtn"
            app:tint="@color/white"></ImageView>

        <Button
            android:id="@+id/getOtpBtn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_back"
            android:paddingRight="10dp"
            android:text="get otp"

            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phone"></Button>

        <TextView
            android:id="@+id/nav_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Already a user?Click here to login"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/getOtpBtn" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
