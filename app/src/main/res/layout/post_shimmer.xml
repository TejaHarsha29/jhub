<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/usser_pp"
            android:layout_width="@dimen/_30mdp"
            android:layout_height="@dimen/_30mdp"


            android:layout_marginTop="8dp"
            android:background="@drawable/circle"
            android:backgroundTint="#EAEAEA"
            android:padding="2.5dp"

            app:layout_constraintStart_toStartOf="parent"


            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/name"
            android:layout_width="150dp"
            android:layout_height="14dp"
            android:layout_marginLeft="10dp"
            android:background="#EAEAEA"




            app:layout_constraintBottom_toBottomOf="@+id/usser_pp"
            app:layout_constraintStart_toEndOf="@+id/usser_pp"
            app:layout_constraintTop_toTopOf="@+id/usser_pp"
            app:layout_constraintVertical_bias="0.16000003" />

        <View
            android:id="@+id/roll"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"


            android:background="#EAEAEA"
            app:layout_constraintStart_toStartOf="@+id/name"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <View
            android:id="@+id/kk"
            android:layout_width="30dp"
            android:layout_height="30dp"


            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="#EAEAEA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="#EAEAEA"



            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roll"
            app:riv_mutate_background="true"
            app:riv_oval="false" />

        <View
            android:id="@+id/pt"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"


            android:background="#EAEAEA"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/post_image"
            app:riv_mutate_background="true"
            app:riv_oval="false" />


    </androidx.constraintlayout.widget.ConstraintLayout>










</RelativeLayout>












