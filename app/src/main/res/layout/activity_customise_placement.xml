<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fece2e"
    tools:context=".CustomisePlacementActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/_30mdp"
            android:layout_height="@dimen/_30mdp"
            android:layout_marginStart="24dp"

            android:layout_marginTop="16dp"

            android:background="@drawable/post_ack_shadow"
            android:padding="@dimen/_8mdp"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/andika_new_basic_bold"
            android:text="Create Post"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"></TextView>

        <Button
            android:id="@+id/post_btn"
            android:layout_width="@dimen/_100mdp"
            android:layout_height="@dimen/_45mdp"
            android:layout_marginTop="16dp"
            android:background="@drawable/btn_back"
            android:text="Post"
            android:textColor="#4D000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/last_date"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/user_name"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:background="@drawable/et_back"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="Company Name"
            android:inputType="text"
            android:paddingLeft="55dp"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8"
            app:layout_constraintVertical_bias="0.050000012"
            tools:ignore="TouchTargetSizeCheck" />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/profile"
            app:layout_constraintBottom_toBottomOf="@+id/user_name"
            app:layout_constraintEnd_toEndOf="@+id/user_name"

            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toStartOf="@+id/user_name"
            app:layout_constraintTop_toTopOf="@+id/user_name"></ImageView>

        <EditText
            android:id="@+id/eligibility"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/et_back"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="Eligibility"
            android:inputType="text"
            android:paddingLeft="55dp"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_name"
            tools:ignore="TouchTargetSizeCheck" />
        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/profile"
            app:layout_constraintBottom_toBottomOf="@+id/eligibility"
            app:layout_constraintEnd_toEndOf="@+id/eligibility"

            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toStartOf="@+id/eligibility"
            app:layout_constraintTop_toTopOf="@+id/eligibility"></ImageView>

        <EditText
            android:id="@+id/packag"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/et_back"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="Package"
            android:inputType="text"
            android:paddingLeft="55dp"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/batch"
            tools:ignore="TouchTargetSizeCheck" />
        <ImageView
            android:id="@+id/imageView32"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/profile"
            app:layout_constraintBottom_toBottomOf="@+id/packag"
            app:layout_constraintEnd_toEndOf="@+id/packag"

            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toStartOf="@+id/packag"
            app:layout_constraintTop_toTopOf="@+id/packag"></ImageView>


        <EditText
            android:id="@+id/linkee"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/et_back"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="Link"
            android:inputType="text"
            android:paddingLeft="55dp"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/packag"
            tools:ignore="TouchTargetSizeCheck" />
        <ImageView
            android:id="@+id/imageView33"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/profile"
            app:layout_constraintBottom_toBottomOf="@+id/linkee"
            app:layout_constraintEnd_toEndOf="@+id/linkee"

            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toStartOf="@+id/linkee"
            app:layout_constraintTop_toTopOf="@+id/linkee"></ImageView>


        <EditText
            android:id="@+id/last_date"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/et_back"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="Last date to Apply"
            android:inputType="text"
            android:paddingLeft="55dp"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linkee"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/imageView39"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/profile"
            app:layout_constraintBottom_toBottomOf="@+id/last_date"
            app:layout_constraintEnd_toEndOf="@+id/last_date"

            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toStartOf="@+id/last_date"
            app:layout_constraintTop_toTopOf="@+id/last_date"></ImageView>

        <EditText
            android:id="@+id/batch"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/et_back"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="batch"
            android:inputType="text"
            android:paddingLeft="55dp"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eligibility"
            tools:ignore="TouchTargetSizeCheck" />
        <ImageView
            android:id="@+id/imageView44"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/profile"
            app:layout_constraintBottom_toBottomOf="@+id/batch"
            app:layout_constraintEnd_toEndOf="@+id/batch"

            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toStartOf="@+id/batch"
            app:layout_constraintTop_toTopOf="@+id/batch"></ImageView>


        <TextView
            android:id="@+id/textView8"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:inputType="textMultiLine"
            android:text="Only placement coordinator has access to this page"
            android:textColor="#131212"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.110000014"
            tools:ignore="TouchTargetSizeCheck" />






    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>