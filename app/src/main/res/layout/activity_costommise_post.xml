<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.appsByHarsha.jhub.CostommisePostActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/_30mdp"
        android:layout_height="@dimen/_30mdp"
        android:layout_marginStart="24dp"

        android:layout_marginTop="16dp"

        android:background="@drawable/post_ack_shadow"
        android:padding="@dimen/_8mdp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/andika_new_basic_bold"
        android:text="Create Post"
        android:textColor="#fece2e"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"></TextView>

    <Button
        android:id="@+id/post_btn"
        android:layout_width="@dimen/_65mdp"
        android:layout_height="@dimen/_32mdp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/post_bg"
        android:enabled="false"
        android:text="Post"
        android:textColor="#4D000000"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/top_user"
        android:layout_width="@dimen/_50mdp"
        android:layout_height="@dimen/_50mdp"
        android:layout_marginStart="24dp"

        android:layout_marginTop="16dp"
        android:background="@drawable/yellow_circle"
        android:padding="2.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/man" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/akaya_telivigala"
        android:text="Teja Harsha"
        android:textColor="#000000"
        android:textSize="@dimen/_14mdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/top_user"
        app:layout_constraintStart_toEndOf="@+id/top_user"
        app:layout_constraintTop_toTopOf="@+id/top_user"
        app:layout_constraintVertical_bias="0.36" />

    <TextView
        android:id="@+id/roll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="keep smiling"
        android:textColor="#000000"
        android:textSize="@dimen/_11mdp"
        app:layout_constraintBottom_toBottomOf="@+id/top_user"
        app:layout_constraintStart_toEndOf="@+id/top_user"
        app:layout_constraintTop_toTopOf="@+id/top_user"
        app:layout_constraintVertical_bias="0.82" />

    <EditText
        android:id="@+id/post_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="top"
        android:hint="What's on your mind?"
        android:inputType="textMultiLine|textPersonName"
        android:padding="5dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/post_image_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/top_user"
        app:layout_constraintTop_toBottomOf="@+id/top_user"
        tools:ignore="TouchTargetSizeCheck" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.9dp"
        android:layout_marginBottom="14dp"
        android:background="#e9e6e1"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></View>

    <ImageView
        android:id="@+id/add_image"
        android:layout_width="@dimen/_30mdp"
        android:layout_height="@dimen/_30mdp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/gallery" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Add to your post"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/add_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_image" />

    <ImageView
        android:id="@+id/post_image_edit"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitCenter"
        android:background="#33000000"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_user"
        app:riv_border_color="#333333"
        app:riv_corner_radius="5dip"
        app:riv_mutate_background="true"
        app:riv_oval="false"
        app:srcCompat="@drawable/placeholder" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here to select image"
        app:layout_constraintBottom_toBottomOf="@+id/post_image_edit"
        app:layout_constraintEnd_toEndOf="@+id/post_image_edit"
        app:layout_constraintStart_toStartOf="@+id/post_image_edit"
        app:layout_constraintTop_toTopOf="@+id/post_image_edit"
        app:layout_constraintVertical_bias="0.62" />

</androidx.constraintlayout.widget.ConstraintLayout>